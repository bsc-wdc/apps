!
!-----------------------------------------------------------------------
!***  model grid domain boundaries
!-----------------------------------------------------------------------
!
real(kind=4),parameter :: tlm0d=TLMD &                             !<-- center point longitudinal (E/W)
                         ,tph0d=TPHD &                             !<-- center point latitudinal (S/N)
                         ,wbd=WBDN &                               !<-- western boundary (from center point)
                         ,sbd=SBDN &                               !<-- southern boundary (from center point)
                         ,pt=PTOP    &                               !<-- pressure at top of atmosphere
                         ,ptsgm=30000. &                           !<-- pressure sigma at toa
                         ,dlmd=DLMN &                              !<-- longitudinal grid resolution
                         ,dphd=DPHN                                !<-- latitudinal grid resolution
!
!-----------------------------------------------------------------------
!***  model grid domain coordinates
!***  IMI,JMI,LM MUST AGREE WITH IM,JM,LM IN CONFIGFILE_GLOBAL
!-----------------------------------------------------------------------
!
integer(kind=4),parameter :: imi=III &                             !<-- longitudinal mesh size
                            ,jmi=JJJ &                             !<-- latitudinal mesh size
                            ,im=IBDY,jm=JBDY &                     !<-- mesh size with boundaries
                            ,lm=KKK &                              !<-- horizontal model layers
!
!-----------------------------------------------------------------------
!***  additional grid parameters
!-----------------------------------------------------------------------
!
                            ,lnsh=1 &
                            ,lnsv=lnsh &
                            ,kms=4 &
                            ,ksnos=1 &
                            ,nosnos=kms-ksnos &
                            ,nwets=4
!
